<div class="container-xl">
    <div class="row">
        <div class="col-12">
            <h2>Edit Client Information</h2>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Client Name</label>
                        <input type="text" class="form-control" id="name" placeholder="John Doe Brewery">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="contact">Primary Contact</label>
                        <input type="text" class="form-control" id="contact" placeholder="Jane Doe">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="customersupport@johndoebrewery.com">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="phone">Phone</label>
                        <input type="tel" class="form-control" id="phone" placeholder="1-(555)-123-4567">
                    </div>
                </div>
                <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="deleteEmployee" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                Confirm Deletion
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this record?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <a class="btn btn-danger btn-ok">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="primary">Save Changes</button>
                <button type="button" class="default">Discard Changes</button>
                <a href="#" data-toggle="modal" data-target="#confirm-delete">Delete</a>
            </form>
        </div>
    </div>
</div>