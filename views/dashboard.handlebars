<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>New Tickets</h2>
            <table class="ticket-table">
                <thead>
                    <tr>
                        <th class="ticket-title">Title</th>
                        <th class="ticket-description">Description</th>
                        <th class="ticket-category">Category</th>
                        <th class="ticket-client">Client</th>
                        <th class="ticket-date">Submitted</th>
                        <th class="ticket-assign"></th>
                    </tr>
                </thead>
                <tbody>
                    {{!--{{#each this.tickets.new}}--}}
                    <tr>
                        <td><a href="/ticket_details/{{!--{{this.TicketId}}--}}">Test Title</a></td>
                        <td>Test Description</td>
                        <td>Test Category</td>
                        <td><a href="/client_details/{{!--{{this.ClientId}}--}}">Test Client</a></td>
                        <td>01/01/1970</td>
                        <td>
                            <button class="default" data-toggle="modal" data-target="#assignModal">Assign</button>
                        </td>
                    </tr>
                    {{!--{{/each}}--}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Tickets In-Progress</h2>
            <table class="ticket-table">
                <thead>
                    <tr>
                        <th class="ticket-title">Title</th>
                        <th class="ticket-category">Category</th>
                        <th class="ticket-status">Status</th>
                        <th class="ticket-client">Client</th>
                        <th class="ticket-employee">Assigned Employees</th>
                        <th class="ticket-date">Submitted</th>
                        <th class="ticket-date">Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    {{!--{{#each this.tickets.inprogress}}--}}
                    <tr>
                        <td><a href="/ticket_details/{{!--{{this.TicketId}}--}}">Test Title</a></td>
                        <td>Test Category</td>
                        <td>Assigned</td>
                        <td><a href="/client_details/{{!--{{this.ClientId}}--}}">Test Client</a></td>
                        <td><a href="/employee_details/">Test Employee</a></td>
                        <td>01/01/1970</td>
                        <td>01/01/1970</td>
                    </tr>
                    {{!-- {{/each}} --}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Closed Tickets</h2>
            <table class="ticket-table">
                <thead>
                    <tr>
                        <th class="ticket-title">Title</th>
                        <th class="ticket-description">Description</th>
                        <th class="ticket-client">Client</th>
                        <th class="ticket-date">Date Closed</th>
                        <th>Resolution</th>
                    </tr>
                </thead>
                <tbody>
                    {{!--{{#each this.tickets.closed}}--}}
                    <tr>
                        <td><a href="/ticket_details/{{!--{{this.TicketId}}--}}">Test Title</a></td>
                        <td>Test Description</td>
                        <td><a href="/client_details/{{!--{{this.ClientId}}--}}">Test Client</a></td>
                        <td>01/01/1970</td>
                        <td>Test Resolution</td>
                    </tr>
                    {{!--{{/each}}--}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="assignModal" class="modal" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Assign Employee to Ticket {ticket #}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div id="assignModalBody" class="modal-body">
            <div class="row">
                <div class="col-12">
                <label for="assign_employee_name">Name</label>
                <select name="assign_employee_name" id="assign_employee_name">
                    {{!--{{#each this.employees}}--}}
                    <option value="1">Employee #1</option>
                    {{!--{{/each}}--}}
                </select>
                </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="default" data-dismiss="modal">Cancel</button>
            <button type="button" class="primary">Save</button>
        </div>
        </div>
    </div>
</div>