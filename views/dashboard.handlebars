<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>New Tickets</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Client</th>
                        <th>Submitted</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>(Non-DB) Test Title</td>
                        <td>(Non-DB) Test Description</td>
                        <td>(Non-DB) Test Category</td>
                        <td>(Non-DB) Test Status</td>
                        <td>(Non-DB) Test Client</td>
                        <td>01/01/1970</td>
                        <td>
                            <button class="default" data-toggle="modal" data-target="#assignModal">Assign</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-7">
            <h2>Tickets In-Progress</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Client</th>
                        <th>Submitted</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>(Non-DB) Test Title</td>
                        <td>(Non-DB) Test Category</td>
                        <td>(Non-DB) Test Status</td>
                        <td>(Non-DB) Test Client</td>
                        <td>01/01/1970</td>
                        <td>01/01/1970</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xl-5">
            <h2>Closed Tickets</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Client</th>
                        <th>Date Closed</th>
                        <th>Resolution</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>(Non-DB) Test Title</td>
                        <td>(Non-DB) Test Client</td>
                        <td>01/01/1970</td>
                        <td>(Non-DB) Test Resolution</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="assignModal" class="modal" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Assign Employee to Ticket {ticket #}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div id="assignModalBody" class="modal-body">
            <div class="row">
                <div class="col-12">
                <label for="assign_employee_name">Name</label>
                <select name="assign_employee_name" id="assign_employee_name">
                  <option value="1">Employee #1</option>
                  <option value="2">Employee #2</option>
                  <option value="3">Employee #3</option>
                </select>
                </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="default" data-dismiss="modal">Cancel</button>
            <button type="button" class="primary">Save</button>
        </div>
        </div>
    </div>
</div>