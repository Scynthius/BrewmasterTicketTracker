<div class="container-xl">
    <div class="row">
        <div class="col-12">
            <h2>Edit Business Category Information</h2>
            
            <form>
                <div class="form-row">
                    <input type="text" class="form-control" id="updateBTID" value={{{types.0.TypeID}}} hidden>
                    <div class="form-group col-md-6">
                        <label for="updateBTName">Business Type Name</label>
                        <input type="text" class="form-control" id="updateBTName" value="{{{types.0.Name}}}">
                    </div>
                </div>
                <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="deleteBT" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                Confirm Deletion
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this record?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <a class="btn btn-danger btn-ok" id="deleteBT">Delete</a>
                            </div>  
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="confirm-update" tabindex="-1" role="dialog" aria-labelledby="updateBT" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                Update Complete
                            </div>
                            <div class="modal-body">
                                Business Type has been updated successfully.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="completed-delete" tabindex="-1" role="dialog" aria-labelledby="deleteBT" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                Delete Complete
                            </div>
                            <div class="modal-body">
                                Business Type record has been deleted. 
                            </div>
                            <div class="modal-footer">
                                <a href="/business-types">Return to Business Types List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="primary" id="updateBT">Save Changes</button>
                <button type="button" class="default" onclick="window.location.reload()">Discard Changes</button>
                <a href="#" data-toggle="modal" data-target="#confirm-delete">Delete</a>
            </form>
            
        </div>
    </div>
</div>